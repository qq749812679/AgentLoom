FROM python:3.10-slim
WORKDIR /app
COPY multiscen/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt && pip install fastapi uvicorn
COPY multiscen/server/mock_api.py /app/server/mock_api.py
EXPOSE 8000
CMD ["uvicorn", "server.mock_api:app", "--host", "0.0.0.0", "--port", "8000"] 